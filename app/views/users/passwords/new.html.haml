- @title = "Forgot My Password"
#main.devise-1
  .container-fluid
    .row
      %header.text-center
        %h1= app_name
        %p.p-0.m-0.text-uppercase Forgot My Passowrd
    .row.mt-5
      .col-sm-12.col-md-6.mr-auto.ml-auto
        .card
          .card-body
            .container
              = form_for resource, as: resource_name, url: password_path(resource_name), |
                html: { method: :post, class: "form-horizontal" } do |f|                 |
                = f.error_notification
                = f.form_group :email, class: "row" do |f|
                  = f.label :email, class: "form-label"
                  = f.email_field :email, autofocus: true, class: "form-control"
                  = f.error_messages
                .row.d-flex.align-items-center.mt-5
                  = link_to "Sign in", new_registration_path(resource_name)
                  = f.submit "Send me reset password instructions", class: "btn btn-primary ml-auto"
