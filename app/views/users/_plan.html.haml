.plan-selector
  %form{action: ""}
    .form-check
      %label.custom-control.custom-radio
        %input.custom-control-input{checked: "checked", name: "plan-level", type: "radio"}/
        %span.custom-control-indicator
        %span.custom-control-description.d-flex.w-100
          .details
            .plan-name Indie
            .plan-description 10 projects, 500MB storage
          .price
            $9/mo
