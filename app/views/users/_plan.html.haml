      %label.custom-control.custom-radio
        %input.custom-control-input{name: "plan-level", type: "radio"}/
        .highlight
        %span.custom-control-indicator
        %span.custom-control-description.d-flex.w-100
          .details
            .plan-name Basic
            .plan-description 20 projects, 1500MB storage
          .price
            $19/mo
    .form-check
      %label.custom-control.custom-radio
        %input.custom-control-input{name: "plan-level", type: "radio"}/
        %span.custom-control-indicator
        %span.custom-control-description.d-flex.w-100
          .details
            .plan-name Pro
            .plan-description 30 projects, 2500MB storage
