.fileinput.fileinput-avatar.fileinput-new.d-flex.flex-column.align-items-center{"data-provides" => "fileinput", style: "height: 200px; width: 200px"}
  .fileinput-new.thumbnail{style: "height: 200px;"}
    = user_avatar(current_user, class: 'rounded-circle shadow')
  .fileinput-preview.fileinput-exists.avatar.rounded-circle
  .avatar-controls
    %span.btn.btn-sm.btn-link.btn-file
      %span.fileinput-new= theme_icon_tag "upload"
      %span.fileinput-exists= theme_icon_tag "upload"
      %input{name: "user[ava]", type: "file"}/
    %a.btn.btn-sm.btn-link.fileinput-exists{"data-dismiss" => "fileinput", href: "#"}= theme_icon_tag "close"
