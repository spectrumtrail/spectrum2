- @title = "Listing emergency_contacts"

- content_for :description do
  %p Edit this template in app/views/EmergencyContacts/index.html.haml.

- content_for :actions do
  = link_to new_emergency_contact_path, class: 'btn btn-primary btn-large pull-right' do
    = fa_icon_tag "plus"
    Add Emergency contact

.container
  .row
    .col-xs-12.col-sm-12.col-md-12.col-lg-12
      .sheet.sheet-condensed
        .sheet-inner
          %table.table
            %thead
              %tr
                %th User
                %th First name
                %th Last name
                %th Relation
                %th Cell phone
                %th Last notified
                %th
            %tbody
            - @emergency_contacts.each do |emergency_contact|
              %tr
              %td= emergency_contact.user
            %td= emergency_contact.first_name
            %td= emergency_contact.last_name
            %td= emergency_contact.relation
            %td= emergency_contact.cell_phone
            %td= emergency_contact.last_notified
              %td.actions
                = link_to fa_icon_tag("eye-open"), emergency_contact, rel: 'tooltip', title: 'Show'
                = link_to fa_icon_tag("pencil"), edit_emergency_contact_path(emergency_contact), rel: 'tooltip', title: 'Edit'
                = link_to fa_icon_tag("trash"), emergency_contact, rel: 'tooltip', title: 'Delete', data: { confirm: 'Are you sure?' }, method: :delete

            