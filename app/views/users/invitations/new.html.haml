- @title = "Request an Invite"
#main.devise-1
  .container-fluid
    .row
      %header.text-center
        %h1= app_name
        %p.p-0.m-0.text-uppercase Request an invite
    .row.mt-5
      .col-sm-12.col-md-6.mr-auto.ml-auto
        .card
          .card-body
            .container
              = form_for resource, as: resource_name, url: invitation_path(resource_name), |
                html: { class: "form-horizontal", novalidate: true } do |f|                |
                - resource.class.invite_key_fields.each do |field|
                  = f.form_group field, class: "row" do |f|
                    = f.label field, class: "form-label"
                    = f.text_field field, autofocus: true, class: "form-control"
                    = f.error_messages
                .row.d-flex.align-items-center.mt-5
                  = f.submit "Request an Invite", class: "btn btn-primary ml-auto"
